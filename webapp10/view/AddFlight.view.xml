<mvc:View
    xmlns:f="sap.f"
    controllerName="ui5.rest.restwithui5.controller.AddFlight"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    busyIndicatorDelay="0"
>
    <f:DynamicPage>
        <f:content>
            <VBox
                class="sapUiResponsiveMargin p-2 rounded border"
                backgroundDesign="Solid"
            >
                <VBox>
                    <Title text="Add Flight form" />
                    <Label
                        text="Fill in the form below to add Flight"
                        wrapping="true"
                    />
                </VBox>
                <mvc:XMLView
                    viewName="ui5.rest.restwithui5.view.Underline"
                    class="sapUiSmallMarginTopBottom"
                />

                <VBox class="gap-2">
                    <VBox>
                        <Label
                            text="Aircraft Id"
                            labelFor="idAircraftIdInput"
                        />
                        <Input
                            type="Number"
                            value="{addFlightFormModel>/aircraftId}"
                            required="true"
                            id="idAircraftIdInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/aircraftId}"
                            visible="{= ${addFlightFormModel>/error/aircraftId} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Source Airport Code"
                            labelFor="idSourceAirportCodeInput"
                        />
                        <Input
                            type="Text"
                            value="{addFlightFormModel>/sourceAirportCode}"
                            required="true"
                            id="idSourceAirportCodeInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/sourceAirportCode}"
                            visible="{= ${addFlightFormModel>/error/sourceAirportCode} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Destination Airport Code"
                            labelFor="idDestinationAirportCodeInput"
                        />
                        <Input
                            type="Text"
                            value="{addFlightFormModel>/destinationAirportCode}"
                            required="true"
                            id="idDestinationAirportCodeInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/destinationAirportCode}"
                            visible="{= ${addFlightFormModel>/error/destinationAirportCode} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Departure Date"
                            labelFor="idDepartureDateInput"
                        />
                        <Input
                            type="Date"
                            value="{addFlightFormModel>/departureDate}"
                            required="true"
                            id="idDepartureDateInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/departureDate}"
                            visible="{= ${addFlightFormModel>/error/departureDate} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Departure Time"
                            labelFor="idDepartureTimeInput"
                        />
                        <Input
                            type="Time"
                            value="{addFlightFormModel>/departureTime}"
                            required="true"
                            id="idDepartureTimeInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/departureTime}"
                            visible="{= ${addFlightFormModel>/error/departureTime} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Arrival Date"
                            labelFor="idArrivalDateInput"
                        />
                        <Input
                            type="Date"
                            value="{addFlightFormModel>/arrivalDate}"
                            required="true"
                            id="idArrivalDateInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/arrivalDate}"
                            visible="{= ${addFlightFormModel>/error/arrivalDate} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Arrival Time"
                            labelFor="idArrivalTimeInput"
                        />
                        <Input
                            type="Time"
                            value="{addFlightFormModel>/arrivalTime}"
                            required="true"
                            id="idArrivalTimeInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/arrivalTime}"
                            visible="{= ${addFlightFormModel>/error/arrivalTime} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Price"
                            labelFor="idPriceInput"
                        />
                        <Input
                            type="Number"
                            value="{addFlightFormModel>/price}"
                            required="true"
                            id="idPriceInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/price}"
                            visible="{= ${addFlightFormModel>/error/price} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Company"
                            labelFor="idCompanyInput"
                        />
                        <Input
                            type="Text"
                            value="{addFlightFormModel>/company}"
                            required="true"
                            id="idCompanyInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/company}"
                            visible="{= ${addFlightFormModel>/error/company} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Seats"
                            labelFor="idSeatsInput"
                        />
                        <Input
                            type="Number"
                            value="{addFlightFormModel>/seats}"
                            required="true"
                            id="idSeatsInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/seats}"
                            visible="{= ${addFlightFormModel>/error/seats} ? true : false}"
                        />
                    </VBox>
                    <VBox>
                        <Label
                            text="Image URL"
                            labelFor="idImageUrlInput"
                        />
                        <Input
                            type="Text"
                            value="{addFlightFormModel>/companyLogoUrl}"
                            required="true"
                            id="idImageUrlInput"
                        />
                        <Text
                            class="text-red"
                            text="{addFlightFormModel>/error/companyLogoUrl}"
                            visible="{= ${addFlightFormModel>/error/companyLogoUrl} ? true : false}"
                        />
                    </VBox>

                    <Button
                        text="Add Flight"
                        type="Emphasized"
                        icon="sap-icon://add"
                        press="onAddFlightButtonPress"
                    />
                </VBox>
                <mvc:XMLView
                    viewName="ui5.rest.restwithui5.view.Underline"
                    class="sapUiSmallMarginTopBottom"
                />
                <VBox>
                    <Text text="Upload Flight Json" />
                    <TextArea
                        width="100%"
                        rows="12"
                        value="{addFlightFormModel>/addFlightJson}"
                    />

                    <Button
                        text="Add Flight via JSON"
                        icon="sap-icon://add-activity"
                        type="Emphasized"
                        press="onAddFlightViaJSONButtonPress"
                    />
                </VBox>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
