<mvc:View
    controllerName="ui5.rest.restwithui5.controller.ShellBar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.f"
    xmlns:m="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <ShellBar
        id="shellBar"
        title="Flight Booking System (ixp)"
        secondTitle="by Kartikeya Saini"
        homeIcon="/images/flight-logo-100px.png"
        showNavButton="true"
        navButtonPressed="onNavBack"
        busyIndicatorSize="Small"
        homeIconPressed="onShellBarHomeIconPressed"
    >
        <additionalContent>
            <m:OverflowToolbarButton
                text="Login"
                textDirection="LTR"
                press="onLoginPress"
                type="Ghost"
                visible="{= ${/user/name} ? false : true}"
                icon="sap-icon://visits"
            />

            <m:OverflowToolbarButton
                text="Logout"
                press="onLogoutPress"
                visible="{= ${/user/name} ? true : false}"
                type="Reject"
                icon="sap-icon://log"
            />
        </additionalContent>
        <profile>
            <m:Avatar
                initials="{= ${/user/userName}.substring(0,2).toUpperCase()}"
                src="{/user/picture}"
                press="redirectToBookings"
                visible="{= ${/user/name} ? true : false}"
            />
        </profile>
    </ShellBar>
</mvc:View>
