<mvc:View
    xmlns:f="sap.f"
    controllerName="ui5.rest.restwithui5.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    busyIndicatorDelay="0"
>
    <!-- <f:DynamicPage class="sapUiContentPadding">
        <Text text="Hello" />
    </f:DynamicPage> -->
    <Page class="-mt-4">
        <f:DynamicPage
            title="Flight Details"
            showFooter="true"
        >
            <f:content>
                <VBox>
                    <VBox class="">
                        <Title text="Select Seats" />
                        <Label text="Add passengers for the seats you select" />
                        <HBox
                            width="100%"
                            class="flightCardNoBg sapUiTinyMarginTop bg-gray gap-2"
                            justifyContent="SpaceAround"
                            wrap="Wrap"
                        >
                            <mvc:XMLView
                                viewName="ui5.rest.restwithui5.view.AircraftStructure"
                                class="mx-auto"
                            />

                            <VBox
                                backgroundDesign="Solid"
                                class="flightCard"
                                width="100%"
                            >
                                <layoutData>
                                    <FlexItemData maxWidth="560px" />
                                </layoutData>
                                <mvc:XMLView
                                    viewName="ui5.rest.restwithui5.view.PassengerForm"
                                />
                            </VBox>
                        </HBox>
                    </VBox>

                    <HBox
                        justifyContent="SpaceBetween"
                        wrap="Wrap"
                        class="gap-2 flightCard sapUiSmallMarginTop sapUiLargeMarginBottom"
                        backgroundDesign="Solid"
                    >
                        <VBox>
                            <Title text="Seat Booking Policy" />
                            <Label
                                text="All the seats are priced equally and are priced per person."
                                class="max-w-xs"
                                wrapping="true"
                            />
                        </VBox>

                        <VBox>
                            <Title text="Seat Cancellation Policy" />
                            <Label
                                text="Seats once booked can be cancelled with a 25% cancellation penalty per seat."
                                class="max-w-xs"
                                wrapping="true"
                            />
                        </VBox>
                    </HBox>
                </VBox>
            </f:content>
            <f:footer>
                <OverflowToolbar>
                    <ToolbarSpacer />

                    <Text
                        text="{/flight/price} x {= ${/passengersCount} ? ${/passengersCount} : 0}"
                    />

                    <Text text="=" />
                    <Button
                        type="Accept"
                        text="Pay Rs {= %{/passengersCount} ? ${/passengersCount} * %{/flight/price} : 0 } /-"
                        press="payAmountButtonPress"
                    />
                    <!-- <Button
                        type="Reject"
                        text="Reject"
                    /> -->
                </OverflowToolbar>
            </f:footer>
            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <f:content>
                        <VBox>
                            <Title text="Flight Details" />
                            <Label
                                text="{/flight/flightName} Flight from {/flight/sourceAirport/city} to {/flight/destinationAirport/city}"
                            />
                        </VBox>

                        <VBox class="sapUiMediumMarginTop">
                            <HBox
                                alignItems="Center"
                                wrap="Wrap"
                                justifyContent="SpaceAround"
                                class="gap-2"
                            >
                                <HBox
                                    class="gap-2"
                                    alignItems="Center"
                                >
                                    <Image
                                        src="{/flight/companyLogoUrl}"
                                        alt="Company logo"
                                        height="50px"
                                    />
                                    <VBox>
                                        <Title text="{/flight/company}" />
                                        <Label
                                            text="{= ${/flight/flightName}}"
                                        />
                                    </VBox>
                                </HBox>
                                <HBox
                                    class="gap-2"
                                    alignItems="Center"
                                >
                                    <c:Icon
                                        src="sap-icon://flight"
                                        size="30px"
                                        class="rotate-45"
                                    />
                                    <VBox>
                                        <Title
                                            text="{/flight/departureDateTimeLocalTimeStamp}"
                                        />
                                        <Text
                                            text="{/flight/sourceAirport/airportName} ({/flight/sourceAirport/airportCode})"
                                        />
                                        <Label
                                            text="{/flight/sourceAirport/city}, {/flight/sourceAirport/country}"
                                        />
                                    </VBox>
                                </HBox>

                                <VBox
                                    alignItems="Center"
                                    justifyContent="Center"
                                    class=" gap-1"
                                >
                                    <Text text="Duration: 03:30 hrs" />
                                    <VBox
                                        width="10rem"
                                        height="2px"
                                        class="bg-blue"
                                    />
                                    <Text
                                        text="{path: '/flight/availableSeats', formatter: '.length'} / {/flight/seats} seats left"
                                    />
                                </VBox>

                                <HBox
                                    class="gap-2"
                                    alignItems="Center"
                                >
                                    <c:Icon
                                        src="sap-icon://flight"
                                        size="30px"
                                        class="rotate-120"
                                    />
                                    <VBox>
                                        <Title
                                            text="{/flight/arrivalDateTimeLocalTimeStamp}"
                                        />
                                        <Text
                                            text="{/flight/destinationAirport/airportName} ({/flight/destinationAirport/airportCode})"
                                        />
                                        <Label
                                            text="{/flight/destinationAirport/city}, {/flight/destinationAirport/country}"
                                        />
                                    </VBox>
                                </HBox>
                                <VBox class="">
                                    <Title text="Baggage for this Itenary" />
                                    <Text text="Check In: 15kg / person" />
                                    <Text text="Cabin: 7kg / person" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:landmarkInfo />
            <f:title />
        </f:DynamicPage>
    </Page>
</mvc:View>
