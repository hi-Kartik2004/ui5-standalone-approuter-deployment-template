<mvc:View
    controllerName="ui5.rest.restwithui5.controller.FlightCard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
    height="100%"
    xmlns:l="sap.ui.layout"
>
    <HBox
        class="sapUiSmallMargin gap-2 flightCard"
        alignItems="Center"
        justifyContent="SpaceAround"
        wrap="Wrap"
        width="100%"
    >
        <layoutData>
            <FlexItemData maxWidth="747px" />
        </layoutData>
        <FlexBox
            class="gap-2"
            alignItems="Center"
            wrap="Wrap"
        >
            <Image
                src="https://imgak.mmtcdn.com/flights/assets/media/dt/common/icons/6E.png?v=19"
                alt="Flight_operator_logo"
                width="35px"
            />
            <VBox>
                <Text text="INDIGO" />
                <Text text="BLR-DEL-1" />
            </VBox>
        </FlexBox>
        <FlexBox class="gap-2">
            <FlexBox
                direction="Column"
                justifyContent="Center"
                alignItems="Center"
                wrap="Wrap"
            >
                <Text
                    text="18:15"
                    class="size-2"
                />
                <Label
                    text="New Delhi"
                    class="size-1 mt-1"
                />
            </FlexBox>

            <FlexBox
                direction="Column"
                alignItems="Center"
                justifyContent="Center"
                height="100%"
                class="sapUiTinyMarginBottom"
                wrap="Wrap"
            >
                <Text text="01:30 hrs" />
                <VBox
                    width="80px"
                    height="2px"
                    class="bg-blue mt-1"
                />
            </FlexBox>

            <FlexBox
                direction="Column"
                justifyContent="Center"
                alignItems="Center"
                wrap="Wrap"
            >
                <Text
                    text="18:15"
                    class="size-2"
                />
                <Label
                    text="New Delhi"
                    class="size-1 mt-1"
                />
            </FlexBox>
        </FlexBox>

        <FlexBox
            class="gap-2"
            wrap="Wrap"
        >
            <FlexBox
                direction="Column"
                alignItems="Center"
            >
                <Text
                    text="Rs 3000.5"
                    class="size-2"
                />
                <Label
                    text="per person"
                    class="mt-1"
                />
            </FlexBox>

            <VBox>
                <Button
                    text="Book Seats"
                    class="flightButton"
                />
            </VBox>
        </FlexBox>
    </HBox>
</mvc:View>
