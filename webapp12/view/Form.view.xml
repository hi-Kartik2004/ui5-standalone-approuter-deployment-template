<mvc:View
    controllerName="ui5.rest.restwithui5.controller.Form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    busyIndicatorDelay="0"
>
    <VBox
        class="mx-auto"
        width="100%"
        backgroundDesign="Solid"
    >
        <Title
            text="{data>/greetings} Traveler, begin your search below"
            class="capitalizeText sapUiTinyMarginBottom"
        />

        <mvc:XMLView viewName="ui5.rest.restwithui5.view.Underline" />
        <HBox
            class="sapUiMediumMarginTop sapUiSmallMarginBottom gap-2 "
            justifyContent="Center"
            backgroundDesign="Solid"
            wrap="Wrap"
            width="100%"
        >
            <VBox>
                <!-- <Text text="{/suggestedAirports}" /> -->
                <Label text="Source" />
                <SearchField
                    value="{= (${/srcAirport/airportName}) ? ${/srcAirport/city} + ' (' + ${/srcAirport/airportCode} + ')' : ''}"
                    showSearchButton="false"
                    id="searchSrcAirport"
                    placeholder="Search Airport"
                    enableSuggestions="true"
                    suggest=".onSuggest"
                    suggestionItems="{
				path: '/suggestedAirports',
				sorter: { path: 'city' }
			}"
                    width="100%"
                >
                    <layoutData>
                        <FlexItemData maxWidth="400px" />
                    </layoutData>
                    <SuggestionItem
                        key="{airportCode}"
                        text="{city} ({airportCode})"
                        description="{airportName}"
                    />
                </SearchField>
            </VBox>

            <VBox>
                <Label text="Destination" />
                <SearchField
                    value="{= (${/destAirport/airportName}) ? ${/destAirport/city} + ' (' + ${/destAirport/airportCode} + ')' : ''}"
                    showSearchButton="false"
                    id="searchDestAirport"
                    placeholder="Search Airport"
                    enableSuggestions="true"
                    suggest=".onSuggest"
                    suggestionItems="{
				path: '/suggestedAirports',
				sorter: { path: 'city' }
			}"
                    width="100%"
                >
                    <SuggestionItem
                        key="{airportCode}"
                        text="{city} ({airportCode})"
                        description="{airportName}"
                    />
                </SearchField>
            </VBox>

            <VBox width="100%">
                <layoutData>
                    <FlexItemData maxWidth="200px" />
                </layoutData>
                <Label text="Date" />
                <!-- <Input
                    type="Date"
                    width="100%"
                    id="departureDate"
                /> -->
                <DatePicker
                    value="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
                    style: 'short',
					source: {pattern: 'yyyy-MM-dd'}
				}}"
                    id="departureDate"
                />
            </VBox>

            <VBox
                justifyContent="End"
                width="100%"
            >
                <!-- <Label text="Search" /> -->
                <layoutData>
                    <FlexItemData maxWidth="150px" />
                </layoutData>
                <Button
                    text="Search Flights"
                    iconFirst="false"
                    icon="sap-icon://search"
                    type="Emphasized"
                    width="100%"
                    press="onSearchFlightsButtonPress"
                />
            </VBox>
        </HBox>
    </VBox>
</mvc:View>
