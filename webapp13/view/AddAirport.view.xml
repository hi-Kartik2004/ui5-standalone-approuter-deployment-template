<mvc:View
    xmlns:f="sap.f"
    controllerName="ui5.rest.restwithui5.controller.AddAirport"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <f:DynamicPage
        backgroundDesign="List"
        fitContent="false"
        headerExpanded="true"
        headerPinned="false"
        preserveHeaderStateOnScroll="false"
        showFooter="false"
        toggleHeaderOnTitleClick="true"
    >
        <f:content>
            <VBox class="sapUiMediumMarginTop">
                <Title
                    text="Add Airport Form"
                    level="H1"
                />

                <Label
                    wrapping="true"
                    text="Please fill in all the fields below to create airport"
                />

                <mvc:XMLView
                    viewName="ui5.rest.restwithui5.view.Underline"
                    type="XML"
                    class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                />

                <HBox
                    class="gap-2 sapUiSmallMarginTop"
                    wrap="Wrap"
                    alignItems="Center"
                >
                    <VBox>
                        <Label text="Airport Name" />
                        <Input
                            type="text"
                            placeholder="Enter Airport Name"
                            width="200px"
                            value="{formModel>/airportName}"
                        />
                        <Text
                            text="{formModel>/errors/airportName}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="City" />
                        <Input
                            type="Text"
                            placeholder="Enter Airport City"
                            width="200px"
                            value="{formModel>/city}"
                        />
                        <Text
                            text="{formModel>/errors/city}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="Pincode" />
                        <Input
                            type="Number"
                            placeholder="Enter City Pincode"
                            width="200px"
                            value="{formModel>/pincode}"
                        />
                        <Text
                            text="{formModel>/errors/pincode}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="Country" />
                        <Input
                            type="Text"
                            placeholder="Enter Airport Country"
                            width="200px"
                            value="{formModel>/country}"
                        />
                        <Text
                            class="text-red"
                            text="{formModel>/errors/country}"
                        />
                    </VBox>

                    <VBox>
                        <Label text="State" />
                        <Input
                            type="text"
                            placeholder="Enter Airport State"
                            width="200px"
                            value="{formModel>/state}"
                        />
                        <Text
                            text="{formModel>/errors/state}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="Airport Code" />
                        <Input
                            type="text"
                            placeholder="Enter Airport Code"
                            width="200px"
                            value="{formModel>/airportCode}"
                        />
                        <Text
                            text="{formModel>/errors/airportCode}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="Airport Timezone" />
                        <Input
                            type="text"
                            placeholder="Enter Timezone"
                            width="200px"
                            value="{formModel>/timezone}"
                        />
                        <Text
                            text="{formModel>/errors/timezone}"
                            class="text-red"
                        />
                    </VBox>

                    <VBox>
                        <Label text="Address" />
                        <TextArea
                            type="Text"
                            placeholder="Enter Airport Address"
                            width="200px"
                            value="{formModel>/addr}"
                        />
                        <Text
                            text="{formModel>/errors/addr}"
                            class="text-red"
                        />
                    </VBox>

                    <Button
                        text="Add Airport"
                        icon="sap-icon://add-activity"
                        type="Emphasized"
                        press="addAirportButtonPress"
                    />
                </HBox>

                <mvc:View
                    type="XML"
                    viewName="ui5.rest.restwithui5.view.Underline"
                />

                <VBox class="">
                    <mvc:View
                        viewName="ui5.rest.restwithui5.view.components.AllAirportTable"
                        type="XML"
                    >
                        <mvc:content />
                    </mvc:View>
                </VBox>
            </VBox>
        </f:content>
        <f:footer />
        <f:header />
        <f:landmarkInfo />
        <f:title />
    </f:DynamicPage>
</mvc:View>
