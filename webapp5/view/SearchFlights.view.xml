                </f:DynamicPageTitle>
            </f:title>
            <!-- DynamicPage Header -->
            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <layout:VerticalLayout width="100%">
                        <mvc:XMLView
                            width="100%"
                            viewName="ui5.rest.restwithui5.view.Form"
                        />

                        <layout:HorizontalLayout
                            allowWrapping="true"
                            class="sapUiSmallMarginTop"
                        >
                            <layout:VerticalLayout class="sapUiMediumMarginEnd">
                                <ObjectAttribute
                                    title="Source Airport"
                                    text="{/srcAirport/airportName} ({/srcAirport/airportCode})"
                                />
                                <ObjectAttribute
                                    title="Location"
                                    text="{/srcAirport/city}, {/srcAirport/country}"
                                />
                                <ObjectAttribute
                                    title="Timezone"
                                    text="{/srcAirport/timezone}"
                                />
                            </layout:VerticalLayout>

                            <layout:VerticalLayout>
                                <ObjectAttribute
                                    title="Destination Airport"
                                    text="{/destAirport/airportName} ({/destAirport/airportCode})"
                                />
                                <ObjectAttribute
                                    title="Location"
                                    text="{/destAirport/city}, {/destAirport/country}"
                                />
                                <ObjectAttribute
                                    title="Timezone"
                                    text="{/destAirport/timezone}"
                                />
                            </layout:VerticalLayout>
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <VBox>
                    <FlexBox
                        width="100%"
                        wrap="Wrap"
                        visible="{= ${/flights}.length > 0 ? true : false}"
                    >
                        <VBox
                            class="max-w-xs pr-4"
                            width="100%"
                        >
                            <VBox>
                                <Text
                                    text="Filters"
                                    class="size-2"
                                />
                                <Label
                                    text="Few Helper filter are provided below"
                                    class="mt-1"
                                />

                                <Input
                                    placeholder="Flight Company"
                                    width="200px"
                                    class="max-w-sm sapUiMediumMarginTop"
                                    value="{/queryCompany}"
                                />

                                <Input
                                    placeholder="Passengers Count"
                                    width="200px"
                                    class="max-w-xs sapUiSmallMarginTop"
                                    value="{/queryMinSeats}"
                                />

                                <!-- <Input
                                    placeholder="Search on destination City"
                                    width="200px"
                                    class="max-w-xs sapUiSmallMarginTop"
                                    value="{/queryDestCity}"
                                /> -->

                                <Select
                                    selectedKey="{/SelectedTime}"
                                    items="{
						path: '/time',
						sorter: { path: 'startTime' }
					}"
                                    class="sapUiSmallMarginTop"
                                >
                                    <core:Item
                                        key="{title}"
                                        text="{title} ({startTime} - {endTime})"
                                    />
                                </Select>

                                <Button
                                    type="Neutral"
                                    text="Filter"
                                    icon="sap-icon://filter"
                                    press="onFilterButtonPress"
                                    class="sapUiSmallMarginTop"
                                />
                            </VBox>
                        </VBox>

                        <VBox
                            width="100%"
                            backgroundDesign="Solid"
                        >
                            <layoutData>
                                <FlexItemData maxWidth="935px" />
                            </layoutData>
                            <List
                                items="{/flights}"
                                id="flightsList"
                            >
                                <CustomListItem
                                    id="idFlightCustomListItem"
                                    type="Navigation"
                                    press="navigateToDetails"
                                >
                                    <HBox
                                        class="sapUiSmallMargin gap-2"
                                        alignItems="Center"
                                        justifyContent="SpaceAround"
                                        wrap="Wrap"
                                    >
                                        <FlexBox
                                            class="gap-2"
                                            alignItems="Center"
                                            wrap="Wrap"
                                        >
                                            <Image
                                                src="{companyLogoUrl}"
                                                alt="Flight_operator_logo"
                                                width="35px"
                                            />
                                            <VBox>
                                                <Text text="{company}" />
                                                <Text
                                                    text="{splittedFlightName}"
                                                />
                                            </VBox>
                                        </FlexBox>
                                        <FlexBox class="gap-4">
                                            <FlexBox
                                                direction="Column"
                                                justifyContent="Center"
                                                alignItems="Center"
                                                wrap="Wrap"
                                            >
                                                <Text
                                                    text="{departureTimeLocal}"
                                                    class="size-2"
                                                />
                                                <Label
                                                    text="{sourceAirport/city}"
                                                    class="size-1 mt-1"
                                                />
                                            </FlexBox>

                                            <FlexBox
                                                direction="Column"
                                                alignItems="Center"
                                                justifyContent="Center"
                                                height="100%"
                                                class="sapUiTinyMarginBottom"
                                                wrap="Wrap"
                                            >
                                                <Text text="{duration} hrs" />
                                                <VBox
                                                    width="100px"
                                                    height="2px"
                                                    class="bg-blue mt-1"
                                                />
                                            </FlexBox>

                                            <FlexBox
                                                direction="Column"
                                                justifyContent="Center"
                                                alignItems="Center"
                                                wrap="Wrap"
                                            >
                                                <Text
                                                    text="{arrivalTimeLocal}"
                                                    class="size-2"
                                                />
                                                <Label
                                                    text="{destinationAirport/city}"
                                                    class="size-1 mt-1"
                                                />
                                            </FlexBox>
                                        </FlexBox>

                                        <FlexBox
                                            class="gap-2"
                                            wrap="Wrap"
                                        >
                                            <FlexBox
                                                direction="Column"
                                                alignItems="Center"
                                            >
                                                <Text
                                                    text="Rs {price}"
                                                    class="size-2"
                                                />
                                                <Label
                                                    text="per person"
                                                    class="mt-1"
                                                />
                                            </FlexBox>
                                        </FlexBox>

                                        <HBox
                                            class="button-padding gap-1 rounded border bg-light-blue text-white"
                                            alignItems="Center"
                                        >
                                            <Text
                                                text="Book Seats"
                                                class="text-white"
                                            />
                                            <!-- <core:Icon
                                                src="sap-icon://arrow-right"
                                                size="1rem"
                                            /> -->
                                        </HBox>
                                        <!-- <Button
                                            text="Book Seats"
                                            class="blueButton"
                                            press="navigateToDetails"
                                        /> -->
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </VBox>
                    </FlexBox>
                    <VBox visible="{= ${/flights}.length ? false : true}">
                        <mvc:XMLView
                            viewName="ui5.rest.restwithui5.view.NoFlightsFound"
                        />
                    </VBox>
                </VBox>
            </f:content>
        </f:DynamicPage>
    </Page>
