    xmlns:core="sap.ui.core"
    controllerName="ui5.rest.restwithui5.controller.SearchFlights"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
    xmlns:l="sap.ui.layout"
>
    <Page class="-mt-4">
        <headerContent>
            <Button
                icon="sap-icon://action"
                tooltip="Share"
            />
        </headerContent>
        <f:DynamicPage
            id="dynamicPageId"
            headerExpanded="false"
            toggleHeaderOnTitleClick="{/titleClickable}"
        >
            <!-- DynamicPage Title -->
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title
                            wrapping="true"
                            text="Flights From {/srcCode} - {/destCode} on {/departureDate}"
                        />
                    </f:heading>
                    <f:expandedContent>
                        <Label
                            text="{path: '/flights', formatter: '.length'} Flights Found matching your search"
                        />
                    </f:expandedContent>
                    <f:snappedContent>
                        <Label
                            text="{path: '/flights', formatter: '.length'} Flights Found matching your search"
                        />
                    </f:snappedContent>
                    <f:snappedTitleOnMobile>
                        <Title
                            text="Flights From {/srcCode} - {/destCode} on {/departureDate}"
                        />
                    </f:snappedTitleOnMobile>
