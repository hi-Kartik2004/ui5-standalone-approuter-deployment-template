<mvc:XMLView
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="ui5.rest.restwithui5.controller.PassengerForm"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <VBox>
        <HBox
            alignItems="Center"
            class="gap-4"
            width="100%"
            justifyContent="SpaceBetween"
        >
            <Title text="Passenger Form" />
            <Button
                icon="sap-icon://edit"
                press="onEditFormButtonPress"
            />
        </HBox>
        <List
            backgroundDesign="Solid"
            items="{/flight/passengers}"
            class=""
        >
            <CustomListItem>
                <VBox class="sapUiSmallMarginTop">
                    <Text text="Passenger for seat {seat}" />

                    <HBox
                        class="sapUiTinyMarginTop gap-2"
                        wrap="Wrap"
                    >
                        <VBox>
                            <Label text="Name" />
                            <Input
                                name="name"
                                value="{passengerName}"
                                required="true"
                            />
                        </VBox>

                        <VBox>
                            <Label text="Id Proof" />
                            <Input
                                name="idProof"
                                value="{passengerIdProof}"
                                required="true"
                            />
                        </VBox>

                        <VBox>
                            <Label text="Age" />
                            <Input
                                name="age"
                                value="{passengerAge}"
                                required="true"
                                type="Number"
                            />
                        </VBox>
                    </HBox>
                </VBox>
            </CustomListItem>
        </List>
        <Button
            text="Disable Fields"
            type="Emphasized"
            press="onSaveAllPassengersButtonPress"
            visible="{ path: '/flight/selectedSeats', formatter: '.isSelectedSeats' }"
        />
    </VBox>
</mvc:XMLView>
